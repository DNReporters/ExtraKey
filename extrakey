#!/usr/bin/env bash

spinner() {
    local i sp n
    sp='/-\|'
    n=${#sp}
    printf ' '
    while sleep 0.1; do
        printf "%s\b" "${sp:i++%n:1}"
    done
}

printf 'Now Work ExtraKey Made By DNReporters '
spinner &

sleep 10

kill "$!"
printf '\n'
